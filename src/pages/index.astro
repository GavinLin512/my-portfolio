---
import "../styles/global.css";
import Navbar from "@/components/sections/Navbar.astro";
import Hero from "@/components/sections/Hero.astro";
import About from "@/components/sections/About.astro";
import Projects from "@/components/sections/Projects.astro";
import Experience from "@/components/sections/Experience.astro";
import Education from "@/components/sections/Education.astro";
import Footer from "@/components/sections/Footer.astro";
import { AuroraBackground } from "@/components/ui/aurora-background";
---

<html lang="zh-TW" class="scroll-smooth dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Grayson Lin's Portfolio</title>
        <meta
            name="description"
            content="Software Engineer specializing in Full Stack Development."
        />
        <script
            src="https://kit.fontawesome.com/2f9ed4fc87.js"
            crossorigin="anonymous"></script>
    </head>
    <body
        class="bg-black text-foreground antialiased selection:bg-primary selection:text-black text-lg"
    >
        <AuroraBackground client:load>
            <Navbar />
            <main
                class="max-w-6xl mx-auto px-6 md:px-12 pt-32 pb-20 space-y-32 md:space-y-40"
            >
                <Hero />
                <About />
                <Projects />
                <Experience />
                <Education />
            </main>
            <Footer />
        </AuroraBackground>
    </body>
</html>
