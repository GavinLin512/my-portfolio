---
import { education } from "@/data/datas";
import { Reveal } from "@/components/ui/Reveal";
---

<section id="education" class="space-y-16">
  <Reveal client:visible>
    <h2 class="text-2xl font-bold text-white flex items-center gap-2 mb-4">
      <span class="text-primary">#</span> Education
    </h2>
  </Reveal>
  
  <div class="space-y-0 border-l border-white/10 ml-3">
    {education.map((edu, index) => (
      <Reveal client:visible delay={index * 0.1}>
        <div class="relative pl-8 pb-16 last:pb-0 space-y-2">
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-primary ring-4 ring-black"></div>
          <h3 class="text-xl font-bold text-white">{edu.institution}</h3>
          <p class="text-primary/80 font-medium text-base">{edu.degree}</p>
          <p class="text-sm text-muted-foreground font-mono">{edu.period}</p>
        </div>
      </Reveal>
    ))}
  </div>
</section>