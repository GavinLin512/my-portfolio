---
import { experience } from "@/data/datas";
import { Reveal } from "@/components/ui/Reveal";
---

<section id="experience" class="space-y-16">
  <Reveal client:visible>
    <h2 class="text-2xl font-bold text-white flex items-center gap-2 mb-4">
      <span class="text-primary">#</span> Work Experience
    </h2>
  </Reveal>
  
  <div class="space-y-0 border-l border-white/10 ml-3">
    {experience.map((exp, index) => (
      <Reveal client:visible delay={index * 0.1}>
        <div class="relative pl-8 pb-8 space-y-3">
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-primary ring-4 ring-black"></div>
          <h3 class="text-xl font-bold text-white">{exp.role}</h3>
          <p class="text-primary/80 font-medium text-base">{exp.company}</p>
          <p class="text-sm text-muted-foreground font-mono">{exp.period}</p>
          <ul class="list-disc list-outside ml-4 space-y-3 text-muted-foreground text-base pt-2">
            {exp.descriptions.map(desc => (
              <li>{desc}</li>
            ))}
          </ul>
        </div>
      </Reveal>
    ))}
  </div>
</section>
