---
import { EncryptedText } from "@/components/ui/encrypted-text";
---

<section id="home" class="relative">
    <div class="space-y-8 max-w-3xl">
        <h2
            class="text-primary text-xl md:text-2xl font-medium tracking-wide animate-fade-in-up"
        >
            Hi!, I'm-
        </h2>
        <div
            className="h-[40rem] w-full bg-black flex flex-col items-center justify-center overflow-hidden rounded-md"
        >
            <h1
                class="text-6xl md:text-8xl font-black text-white tracking-tight leading-[1.1] animate-fade-in-up delay-100 relative"
            >
                Grayson Lin.
            </h1>

            <div class="space-y-6 pt-4 animate-fade-in-up delay-200">
                <h3 class="text-2xl md:text-3xl text-white font-bold">
                    Full-Stack Developer. <br /><span
                        class="text-muted-foreground font-normal"
                    >
                        <EncryptedText
                            client:load
                            text="專注於設計高效能與具備高擴展性架構的全端工程師。"
                            encryptedClassName="text-neutral-500"
                            revealedClassName="text-muted-foreground font-normal"
                            revealDelayMs={80}
                        />
                    </span>
                </h3>

                <div class="space-y-2 text-muted-foreground text-lg">
                    <p class="flex items-center gap-2">
                        <i class="fa-solid fa-code-branch text-primary"></i> 目前專精於
                        <span class="text-white"
                            >全端開發 (Laravel / React, Vue)</span
                        >
                    </p>
                    <p class="flex items-center gap-2">
                        <i class="fa-solid fa-location-crosshairs text-primary"
                        ></i> 座標 <span class="text-white">台灣,台中市</span>
                    </p>
                </div>
            </div>

            <div class="flex gap-4 pt-8 animate-fade-in-up delay-300">
                <a
                    href="https://github.com/GavinLin512"
                    target="_blank"
                    class="flex items-center gap-2 px-5 py-2.5 bg-secondary text-white rounded-md text-sm font-medium hover:bg-white/20 transition-colors"
                >
                    <i class="fa-brands fa-github text-primary"></i>
                    Github
                </a>
                <a
                    href="https://www.linkedin.com/in/grayson-lin-a7314634b"
                    target="_blank"
                    class="flex items-center gap-2 px-5 py-2.5 bg-secondary text-white rounded-md text-sm font-medium hover:bg-white/20 transition-colors"
                >
                    <i class="fa-brands fa-linkedin text-primary"></i>
                    LinkedIn
                </a>
                <a
                    href="mailto:graysonlin512@gmail.com"
                    class="flex items-center gap-2 px-5 py-2.5 bg-secondary text-white rounded-md text-sm font-medium hover:bg-white/20 transition-colors"
                >
                    <i class="fa-solid fa-envelope text-primary"></i>
                    Email
                </a>
            </div>
        </div>
    </div>
</section>
